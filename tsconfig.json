{
  "compilerOptions": {
    "rootDir": ".",
    "types": ["node"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "lib": ["es6"]
  },
  "include": ["src"]
}
